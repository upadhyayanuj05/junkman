<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	.important {
		font-weight: bold;}
.panel{
 background: url("https://2.bp.blogspot.com/-x4D3EPELYRU/VMHu52a4qUI/AAAAAAAAHek/EmnIgqTtu_U/s0/fon116%2B2160x1920.png");
 background-size: 100%;
 padding: 0px !important;
 padding-top: 40% !important;
 }
 .fieldPanel{
 background: white;
 padding: 6%;
 }

 .rowAction{
 margin-top: 20px;
 }
 .login_demo{
 padding: 5%;
 }
	
	</ui:style>
	<g:HTMLPanel>
		<m:MaterialRow backgroundColor="GREY_LIGHTEN_4" addStyleNames="{style.login_demo}">
		
 <m:MaterialColumn grid="s12 m8 l6" offset="l4" >
 <m:MaterialPanel shadow="1" addStyleNames="{style.panel}">
 <m:MaterialPanel addStyleNames="{style.fieldPanel}">
 
 <m:MaterialTextBox type="EMAIL" placeholder="Email" ui:field="t1"/>
 <m:MaterialTextBox type="PASSWORD" placeholder="Password" ui:field="t2" />
 <m:MaterialButton ui:field="btn" waves="LIGHT" text="Log In" width="100%"/>
 <m:MaterialRow addStyleNames="{style.rowAction}">
 <m:MaterialColumn grid="s12 m12 l6">
 <m:MaterialCheckBox text="Keep me logged in"/>
 </m:MaterialColumn>
 </m:MaterialRow>
 </m:MaterialPanel>
 </m:MaterialPanel>
 </m:MaterialColumn>
 </m:MaterialRow>
	</g:HTMLPanel>
</ui:UiBinder> 