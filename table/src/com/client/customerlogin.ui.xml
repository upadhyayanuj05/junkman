<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	
	.panel{
 background: url("https://2.bp.blogspot.com/-x4D3EPELYRU/VMHu52a4qUI/AAAAAAAAHek/EmnIgqTtu_U/s0/fon116%2B2160x1920.png");
 background-size: 100%;
 padding: 0px !important;
 padding-top: 40% !important;
 }
 .fieldPanel{
 background: white;
 padding: 6%;
 }
 .imgProfile{
 margin-top: -120px;
 width: 40%;
 margin-left: 30%;
 border: 5px solid #fff;
 }
 .rowAction{
 margin-top: 20px;
 }
 .login_demo{
 padding: 5%;
 }
	}
	</ui:style>
	<g:HTMLPanel>
	
	<m:MaterialRow backgroundColor="GREY_LIGHTEN_4" addStyleNames="{style.login_demo}">
 <m:MaterialColumn grid="s12 m8 l6" offset="l4" >
 <m:MaterialPanel shadow="1" addStyleNames="{style.panel}">
 <m:MaterialPanel addStyleNames="{style.fieldPanel}">
 <m:MaterialImage url="https://i.imgur.com/SHPWRjb.jpg" type="CIRCLE" addStyleNames="{style.imgProfile} z-depth-1"/>
 <m:MaterialTextBox type="EMAIL" placeholder="Email"  ui:field="email"/>
 <m:MaterialTextBox type="PASSWORD" placeholder="Password" ui:field="pass"/>
 <m:MaterialButton ui:field="btnlogin" waves="LIGHT" text="Log In" width="100%"/>
 <m:MaterialRow addStyleNames="{style.rowAction}">
 <m:MaterialColumn grid="s12 m12 l6">
 <m:MaterialButton ui:field="signup" waves="LIGHT" text="Signup" width="100%"/>
 </m:MaterialColumn>
 </m:MaterialRow>
 </m:MaterialPanel>
 </m:MaterialPanel>
 </m:MaterialColumn>
 </m:MaterialRow>
		
	</g:HTMLPanel>
</ui:UiBinder> 